{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".", // !! 기본 url 시작 기준
    "experimentalDecorators": true,
    "sourceMap": true,
    "paths": {
      "@provider/*": ["src/provider/*"],
      "@module/*": ["src/module/*"],
      "@constants/*": ["src/constants/*"],
      "@common/*": ["src/common/*"],
      "@config/*": ["config/*"],
      "@test/*": ["test/*"]
    }
  }
}
